extends layout
append head
    link(rel="stylesheet", href="stylesheets/login.css")
    script(src="https://kit.fontawesome.com/a93ed6a900.js")
block content
    div.container
        div.row
            div.col-sm-9.col-md-7.col-lg-5.mx-auto
                div.card.card-signin.my-5
                    div.card-body
                        h5.card-title.text-center Edit user
                            form.form-signin(method="POST" action="/users/"+ _id + "?_method=PUT" value="PUT")
                                input(type="hidden" name="_method" value="PUT")
                                div.form-label-group
                                    input(type="name" id="inputName" name="name" class="form-control" placeholder=name value=name required autofocus)
                                    label(for="inputName") Name
                                div.form-label-group
                                    input(type="email" id="inputEmail"  name="email" class="form-control" placeholder=email value=email required readonly)
                                    label(for="inputEmail") Email address
                                div.form-label-group
                                    input(type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required)
                                    label(for="inputPassword") 
                                button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type="submit") Save changes
                                hr.my-4
                            form.form-signin(method="POST" action="/users/"+  _id + "?_method=DELETE" value="DELETE")
                                input(type="hidden" name="_method" value="DELETE")
                                button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type="submit") Delete account
                                hr.my-4
        
