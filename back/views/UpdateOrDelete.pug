extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Update or Delete #{type}


                each val, i in data
                    form(method='POST')
                        each key in Object.keys(val)
                            if key !== "_id"
                                div.form-group
                                    label(for= key) #{key}
                                    input#key.form-control(value= val[key] name= key)
                        div.form-group
                            input(type='submit', value='Update', formaction=`/update/${type}/${val["_id"]}`)
                            input(type='submit', value='Delete', formaction=`/delete/${type}/${val["_id"]}`)



    script(type='text/javascript').
        function show(e) {
            console.log(this.e);
        }